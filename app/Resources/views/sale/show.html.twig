{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sale</h1>

    <table>
        <tbody>
            <tr>
                <th>Quantity</th>
                <td>{{ sale.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ sale.price }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ sale.value }}</td>
            </tr>
            <tr>
                <th>Troco</th>
                <td>{{ sale.returnPrice|number_format(2, '.', ',') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if sale.updatedAt %}{{ sale.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sale_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sale_edit', { 'id': sale.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
